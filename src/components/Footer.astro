---
const contactUri = import.meta.env.PUBLIC_WHATSAPP_CONTACT_URI;
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL;
const contactNumber = import.meta.env.PUBLIC_CONTACT_NUMBER;
---

<footer class="bg-[#2D234B] flex md:justify-start w-full mt-20 md:mt-0">
  <div
    class="md:max-w-screen-xl space-y-5 md:space-y-0 mx-auto flex flex-col px-5 md:px-0 md:flex-row justify-center md:justify-between items-center md:items-end w-full py-20"
  >
    <div class="space-y-5 text-center md:text-left">
      <h4 class="text-[#FFF] text-[16px] md:text-[20px] font-[800]">INLINES COLOMBIA S.A.S</h4>
      <h4 class="text-[#767676] text-[14px] md:text-[20px] font-[400]">Neiva - Huila</h4>
      <a href=`mailto:${contactEmail}` class="block">
        <h4 class="text-[#767676] hover:text-[#ccc] text-[14px] md:text-[20px] font-[400]">
          {contactEmail}
        </h4>
      </a>
      <a href={contactUri} class="block" target="_blank">
        <h4 class="text-[#767676] hover:text-[#ccc] text-[14px] md:text-[20px] font-[400]">
          {contactNumber}
        </h4>
      </a>
    </div>
    <h4 class="text-[#767676] text-[14px] md:text-[20px] text-center font-[400]">
      Todos los derechos reservados {new Date().getFullYear()} ©️
    </h4>
  </div>
</footer>
