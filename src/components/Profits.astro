---
import { Image } from "astro:assets";
import special_rates from "../../public/assets/img/webp/special_rates.webp";
import consulting from "../../public/assets/img/webp/consulting.webp";
import experience from "../../public/assets/img/webp/experience.webp";
---

<div
  class="mx-auto flex flex-col justify-start w-full mt-[40px] md:my-[73px] md:max-w-screen-xl px-5 space-y-3"
>
  <h4 class="text-[#A9A9A9] md:text-[20px] font-[500]">
    ¿EN QUÉ TE BENEFICIAS AL ELEGIRNOS?
  </h4>
  <div
    class="bg-[#482172] rounded-[18px] py-5 px-5 md:px-20 justify-between items-center text-[#C9D9F6] text-[20px] flex flex-col md:flex-row space-y-10 md:space-y-0 shadow-lg"
  >
  <div class="flex flex-col justify-center items-center w-full md:max-w-[300px] md:space-y-3 space-y-0">
      <Image
        src={special_rates}
        alt={"Tarifas especiales y acuerdos de pago par Pymes"}
        class={"w-[142px] h-[139px]"}
      />
      <h5 class="text-center sm:text-[18px]">
        Tarifas especiales y acuerdos de pago para Pymes
      </h5>
    </div>
    <div class="flex flex-col justify-center items-center md:max-w-[300px]">
      <Image
        src={experience}
        alt={"Desarrolladores con experiencia profesional"}
        class={"w-[175px] h-[144px]"}
      />
      <h5 class="text-center sm:text-[18px]">
        Desarrolladores con experiencia profesional en desarrollo de Software,
        espcializados en desarrollo web y móvil
      </h5>
    </div>
    <div class="flex flex-col justify-center items-center md:max-w-[300px]">
      <Image
        src={consulting}
        alt={"Asesoramiento y seguimiento personalizado"}
        class={"w-[196px] h-[146px]"}
      />
      <h5 class="text-center sm:text-[18px]">
        Asesoramiento y seguimiento personalizado de tus necesitades de negocio
      </h5>
    </div>
  </div>
</div>
