---
import { Image } from "astro:assets";
import flutterImg from "../../public/assets/img/webp/flutterImg.webp";
import jsFrmImg from "../../public/assets/img/webp/jsFrmImg.webp";
import pythonImg from "../../public/assets/img/webp/pythonImg.webp";
import springBootImg from "../../public/assets/img/webp/springBootImg.webp";
---

<div
  class="mx-auto flex flex-col justify-start w-full mt-[40px] md:my-[73px] md:max-w-screen-2xl px-5 space-y-5 md:space-y-10"
>
  <h4 class="text-center text-[#A9A9A9] md:text-[20px] font-[500]">ALGO DE NUESTRO STACK</h4>
  <div class="flex flex-col md:flex-row justify-between px-5 items-center space-y-10 md:space-y-0">
    <Image
        src={flutterImg}
        alt={"Flutter"}
        class={"w-[251px] h-[73px]"}
      />
      <Image
        src={springBootImg}
        alt={"Spring Boot"}
        class={"w-[230px] h-[121px]"}
      />
      <Image
        src={jsFrmImg}
        alt={"JS Frameworks"}
        class={"w-[476px] h-[210px]"}
      />
      <Image
        src={pythonImg}
        alt={"Python"}
        class={"w-[210px] h-[187px]"}
      />
  </div>
</div>
